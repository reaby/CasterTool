{% extends 'layout.twig' %}

{% block body %}
	<style>
	.widget {
		position: absolute;
		background: rgba(7,0,77,0.9);
		border-left: 3px solid #ca0c7d;
		padding: 0.5vw;
		color: white;
	}

	#spectInfo {
	 	bottom: 9vh;
		left: 50vw;
		width: 30%;
		margin-left: -15%;
		text-align: center;
		position: absolute;
		padding: 0.5vw;
		display: none;
	}

	#wrInfo {
		left: 0.6vw;
		top:  2.5vh;
		display: none;
	}

	#spect {
		font-weight: bold;
		/* font-style: italic; */
		font-size: 1.75vw;
		color: white;
	}


	#mapName, #wr {
		font-size: 1.5vw;
	}

	#mapAuthor{
		font-size: 1vw;
	}

	.textshad {
		text-shadow: 1px 1px 2px black;
	}

	</style>

	<div id="spectInfo">
		<span id="spect" class="textshad">PB: -:--.---</span>
	</div>

	<div id="wrInfo" class="widget">
		<span id="wr">WR: -:--.--- by N/A</span>
	</div>

	<script src="/socket.io/socket.io.js"></script>
	<script>
		const socket = io();
		let records = {};

		socket.on("front.SpectChange", (player) => {
			const elem = document.querySelector("#spect");
			const info = document.querySelector("#spectInfo");
			let out = "";
			if (player.nick && player.id != 0) {
				info.style.display = "block";
				out = "PB: " + player.time;
			} else {
				info.style.display = "none";
			}
			elem.innerHTML = out;
		});

		socket.on("front.Records", (data) =>{
			const elem = document.querySelector("#wr");
			const info = document.querySelector("#wrInfo");
			let out = "";
			for(let i in data) {
				const record = data[i];
				if (record.rank == 1) {
				out = `WR: ${record.time} by ${record.nick}`;
				break;
				}
			}
			if (out != "") {
				info.style.display = "block";
			} else {
				info.style.display = "none";
			}
			elem.innerHTML = out;
		});

	</script>
{% endblock %}
