{% extends 'layout.twig' %}

{% block body %}
	<style>
	.widget {
		position: absolute;
		background: rgba(0,0,0,0.5);
		padding: 0.5vw;
	}

	#mapInfo {
	 	top: 1vh;
		right: 1vw;
		text-align: right;
	}

	#spectInfo {
	 	bottom: 6vh;
		left: 50vw;
		width: 30%;
		margin-left: -15%;
		text-align: center;
		position: absolute;
		padding: 0.5vw;
	}

	#spect {
		font-weight: bold;
		/* font-style: italic; */
		font-size: 1.5vw;
	}


	#wrInfo {
		left: 1vw;
		top:  10vh;
	}

	#mapName, #wr {
		font-size: 1.5vw;
	}

	#mapAuthor{
		font-size: 1vw;
	}

	.textshad {
		text-shadow: 1px 1px 2px black;
	}

	</style>

	<div id="mapInfo" class="widget">
		<div id="mapName"></div>
		by <span id="mapAuthor"></span>
	</div>

	<div id="spectInfo">
		<span id="spect" class="textshad">n/a</span>
	</div>

	<div id="wrInfo" class="widget">
		<span id="wr">n/a</span>
	</div>

	<script src="/socket.io/socket.io.js"></script>
	<script>
		const socket = io();
		let records = {};

		socket.on("front.Map", (data) =>{
			const mapInfo = document.querySelector("#mapInfo");
			const mapName = document.querySelector("#mapName");
			const mapAuthor = document.querySelector("#mapAuthor");
			if (data.name) {
				mapInfo.style.display = "block";
				mapName.innerHTML = MPStyle.Parser.toHTML(data.name);
				mapAuthor.innerHTML = data.author;
			} else {
				mapInfo.style.display = "none";
				mapName.innerHTML = "";
				mapAuthor.innerHTML = "";
			}
		});

		socket.on("front.SpectChange", (player) => {
			const elem = document.querySelector("#spect");
			const info = document.querySelector("#spectInfo");
			let out = "";
			if (player.nick) {
				info.style.display = "block";
				out = "PB " + player.time;
			} else {
				info.style.display = "none";
			}
			elem.innerHTML = out;
		});

		socket.on("front.Records", (data) =>{
			const elem = document.querySelector("#wr");
			let out = "";
			for(let i in data) {
				const record = data[i];
				if (record.rank == 1) {
				out = `${record.time}  ${record.nick}`;
				break;
				}
			}
			elem.innerHTML = out;
		});

	</script>
{% endblock %}
